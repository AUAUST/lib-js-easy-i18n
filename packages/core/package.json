{
  "name": "@auaust/easy-i18n",
  "version": "0.1.2",
  "description": "The only i18n library you'll ever need. Easy, flexible, lightweight, powerful, type-safe.",
  "license": "GPL-3.0-only",
  "scripts": {
    "build": "yarn test && tsup src/index.ts --format cjs,esm --dts",
    "test": "vitest run --config vitest.config.ts",
    "watch": "vitest --config vitest.config.ts",
    "coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "type": "module",
  "main": "dist/index/index.common.js",
  "module": "dist/index/index.module.js",
  "types": "dist/index/index.d.ts",
  "devDependencies": {
    "@types/node": "^20.5.2",
    "@vitest/coverage-v8": "^1.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vitest": "^1.1.3"
  },
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "@auaust/primitive-kit": "^0.9.4"
  }
}
