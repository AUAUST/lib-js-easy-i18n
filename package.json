{
  "name": "easy-i18n",
  "type": "module",
  "private": true,
  "version": "0.0.0",
  "description": "The only i18n library you'll ever need. Easy, flexible, lightweight, powerful, type-safe.",
  "license": "GPL-3.0-only",
  "author": {
    "email": "aurian@auaust.ch",
    "name": "Aurian Aubert",
    "url": "https://auaust.ch"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "pack-all": "turbo run build ci:pack",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "coverage": "turbo coverage",
    "typecheck": "turbo typecheck",
    "publish": "pnpm build && pnpm publish -r"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.11",
    "@types/node": "^20.17.10",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "0.24.0"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@8.14.1"
}
